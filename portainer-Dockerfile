FROM python:3.9-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    libpq-dev \
    git \
    && rm -rf /var/lib/apt/lists/*

# Clone the TimeTagger repository from hsonixcode fork
RUN git clone https://github.com/hsonixcode/timetagger.git /app

# Install dependencies from requirements.txt
RUN pip install --no-cache-dir -r requirements.txt

# Install optional dependencies for better performance
RUN pip install --no-cache-dir uvicorn uvloop httptools

# Install the package in development mode
RUN pip install -e .

# Create the data directory
RUN mkdir -p /app/data && \
    chmod 777 /app/data

# Expose the port TimeTagger runs on
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=5s --start-period=30s --retries=3 \
  CMD curl -f http://localhost:8000/timetagger/ || exit 1

# Set environment variables (these can be overridden at runtime)
ENV TIMETAGGER_BIND=0.0.0.0:8000 \
    TIMETAGGER_LOG_LEVEL=info

# Run TimeTagger
CMD ["python", "-m", "timetagger"] 