# Database Configuration
POSTGRES_USER=timetagger
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=timetagger
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# TimeTagger Configuration
TIMETAGGER_BIND=0.0.0.0:8000
TIMETAGGER_LOG_LEVEL=info
TIMETAGGER_CREDENTIALS=admin:your_hashed_password
TIMETAGGER_DB_URL=postgresql://timetagger:your_secure_password@postgres:5432/timetagger

# Microsoft Entra ID Configuration (formerly Azure AD)
TIMETAGGER_AZURE_CLIENT_ID=your_azure_client_id
TIMETAGGER_AZURE_TENANT_ID=your_azure_tenant_id
TIMETAGGER_AZURE_CLIENT_SECRET=your_azure_client_secret
TIMETAGGER_AZURE_INSTANCE=https://login.microsoftonline.com
TIMETAGGER_AZURE_REDIRECT_PATH=/timetagger/auth/callback
TIMETAGGER_AZURE_REDIRECT_URI=http://localhost:8000/timetagger/auth/callback
TIMETAGGER_AZURE_SCOPES=openid profile email api://your_azure_client_id/.default 